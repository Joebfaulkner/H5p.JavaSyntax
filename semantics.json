[
  {
    "label": "Task Description",
    "name": "Task description",
    "type": "text",
    "importance": "medium",
    "description": "Provide a brief description of the assigment.",
    "placeholder": "e.g. Please program a simple for loop that contains...",
    "enterMode": "div"
  },
  {
    "label": "Task Requirements",
    "name": "Task Requirements",
    "type": "text",
    "widget":  "html",
    "description": "Enter any specific conditions for the assignment here.",
    "Placeholder": "For loop must contain...",
    "importance": "low",
    "optional":  "true"
  },
  {
    "label": "Description Picture",
    "name": "image",
    "type": "image",
    "optional": true,
    "description": "Add an image to be used in the task description."
  },
  {
    "name": "task",
    "type": "group",
    "label": "Task Configuration",
    "importance": "medium",
    "min": 1,
    "entity": "page",
    "fields": [
      {
        "name": "attempts",
        "type": "boolean",
        "importance": "medium",
        "label": "Multiple Attempts"
      },
      {
        "name": "attemptNumCustom",
        "label": "Number of attempts",
        "type": "number",
        "importance": "low",
        "default": 1,
        "optional": true
      },
      {
        "name": "startingCode",
        "type": "text",
        "label": "Starting Code",
        "importance": "low",
        "description": "Enter any code that would be generated by the application for the student to use.",
        "optional": true
      },
      {
        "name": "applicationImports",
        "type": "group",
        "label": "Java Library Imports",
        "importance": "low",
        "fields": [
          {
            "name": "appImports",
            "type": "list",
            "importance": "high",
            "label": "Imported Libraries",
            "optional": true,
            "widgets": [
              {
                "name": "VerticalTabs",
                "label": "Default"
              }
            ],
            "min": 1,
            "entity": "Imported Libraries",
            "field" : {
              "name": "libraryGroup",
              "type": "group",
              "label": "Imported Library",
              "fields": [
                {
                  "name": "importedLibraries",
                  "label": "Library Address",
                  "type": "text",
                  "description": "Please enter the complete address of the library you wish to import NOTE: Do NOT use asterisks.",
                  "placeholder": "e.g. import Java.util.Scanner;",
                  "importance": "medium",
                  "optional": true
                }
              ]
            }
          }
        ]
      },
      {
        "name": "appParams",
        "label": "Application Params",
        "type": "group",
        "importance": "low",
        "fields": [
      {
        "name": "appVariables",
        "label": "Variables",
        "importance": "high",
        "optional": true,
        "type": "list",
        "widgets": [
          {
            "name": "VerticalTabs",
            "label": "Default"
          }
        ],
        "min": 1,
        "entity": "Variables",
        "field": {
          "name": "varGroup",
          "type": "group",
          "label": "Variable",
          "optional": true,
          "fields": [
          {
            "name": "variableName",
            "type": "text",
            "label": "Variable Name",
            "Description": "Enter the name of any variables to be used in the application (Case Sensitive).",
            "placeholder": "e.g. x, primeNum, charIndex",
            "importance": "medium",
            "optional": true
          },
          {
            "name": "dataType",
            "type": "select",
            "label": "Data Type",
            "importance": "low",
            "optional": false,
            "default": "integer",
            "options": [
              {
                "value": "integer",
                "label": "integer"
              },
              {
                "value": "boolean",
                "label": "boolean"
              },
              {
                "value": "double",
                "label": "double"
              },
              {
                "value": "character",
                "label": "character"
              },
              {
                "value": "string",
                "label": "label"
              },
              {
                "value": "long",
                "label": "long"
              },
              {
                "value": "short",
                "label": "short"
              },
              {
                "value": "byte",
                "label": "byte"
              },
              {
                "value": "float",
                "label": "float"
              }
            ]
          },
          {
            "name": "dataValue",
            "type": "text",
            "label": "Value",
            "importance": "low",
            "description": "Please enter the value of the variable that it will be initialized with. (Optional)",
            "optional": true
          }
        ]
      }
      },
      {
        "name": "application Classes",
        "type": "list",
        "importance": "high",
        "label": "Classes",
        "optional": true,
        "widgets": [
          {
          "name": "VerticalTabs",
          "label": "Default"
          }
        ],
        "min": 1,
        "entity": "Classes",
        "field": {
          "name": "classGroup",
          "type": "group",
          "label": "Classes",
          "fields": [
            {
              "name": "classField",
              "type": "text",
              "label": "Class Name",
              "description": "Enter any classes to be generated by the application for the student to use. (include modifiers)",
              "placeholder": "e.g. public static Shape",
              "importance": "medium",
              "optional": true
            },
            {
              "name": "isConstructor",
              "type": "boolean",
              "label": "Constructor"
            },
            {
              "name": "application Methods",
              "type": "list",
              "importance": "high",
              "label": "Methods",
              "optional": true,
              "widgets": [
                {
                "name": "VerticalTabs",
                "label": "Default"
                }
              ],
              "min": 1,
              "entity": "Methods",
              "field": {
                "name": "methodGroup",
                "type": "group",
                "label": "Methods",
                "optional": true,
                "fields": [
                  {
                    "name": "methodField",
                    "type": "text",
                    "label": "Method Name",
                    "description": "Enter any methods to be generated by the application for the student to use. (include modifiers)",
                    "placeholder": "e.g. public int getNum(int x)",
                    "importance": "medium",
                    "optional": true
                  },
                  {
                    "name": "isConstructor",
                    "type": "boolean",
                    "label": "Constructor"
                  }
                ]
              }
            }
          ]
        }
      }
      ]
    }
    ]
  }
]
